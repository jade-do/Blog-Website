<%- include("partials/header"); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <div class="form-group">
                <label for="journalTitle">Title</label>
                <input type="text" name="journalTitle" id="journalTitle" class="form-control" autocomplete="off"></input>
            </div>

            <div class="form-group"></div>
                <label for="journalPost">Post</label>
                <textarea rows="8" cols="140" name="journalBody" id="journalPost" class="form-control" autocomplete="off"></textarea>
            </div>
            
                <button type="submit" class="btn btn-primary" name="publish">Publish</button>
            
        </div>
    </form>

<%- include("partials/footer"); -%>